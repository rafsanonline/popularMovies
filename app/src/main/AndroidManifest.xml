<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.assignment.self">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.assignment.self.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.assignment.self.view.activities.YoutubePlayerActivity"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"></activity>
        <activity android:name="com.assignment.self.view.activities.MovieDetailActivity"
            android:launchMode="singleTop"
            android:label="MovieDetail"/>
        <activity
            android:name="com.assignment.self.view.activities.PopMovies"
            android:launchMode="singleTop"
            android:label="Pop Movies">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>